{
  "compilerOptions": {
    "baseUrl": ".",  
    "allowSyntheticDefaultImports": true,
    "outDir": "dist/system",
    "sourceMap": true,
    "target": "es5",
    "module": "system",
    "moduleResolution": "node",
    "declaration": true,
    "stripInternal": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noEmitOnError": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "lib": ["es2015", "dom"]
  },
  "exclude": [
    "node_modules",
    "dist",
    "doc"
  ],
  "compileOnSave": true,
  "atom": {
    "rewriteTsconfig": false
  }
}
