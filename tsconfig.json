{
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "stripInternal": true,
    "declaration": true,
    "outDir": "./lib",
    "lib": ["es5", "es2015", "dom"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    ".vscode",
    "dist",
    "doc",
    "node_modules"
  ]
}
