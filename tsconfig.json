{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "stripInternal": true,
    "declaration": true,
    "outDir": "./dist",
    "lib": ["es5", "es2015", "dom"],
    "types": [
      "node",
      "mocha",
      "chai"
    ]
  },
  "include": [
    "src/**/*.ts",
    "tools/**.ts"
  ],
  "exclude": [
    ".vscode",
    "dist",
    "doc",
    "node_modules"
  ]
}
