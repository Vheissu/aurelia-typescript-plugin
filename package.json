{
  "name": "aurelia-typescript-plugin",
  "version": "1.0.0",
  "description": "TypeScript based plugin structure for Aurelia plugins.",
  "keywords": [
    "skeleton",
    "plugin",
    "aurelia"
  ],
  "main": "index.bundle.js",
  "jsnext:main": "index.js",
  "module": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig-esm.json && rollup -c rollup.config.js dist/index.js > dist/index.bundle.js && cp package.json dist && ts-node tools/cleanup.ts && cp README.md dist",
    "lint": "tslint -c tslint.json lib/**/*.ts test/**/*.ts",
    "test": "mocha --require ts-node/register test/**/*.spec.ts --recursive",
    "test:watch": "mocha -w --require ts-node/register test/**/*.spec.ts --recursive"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Vheissu/aurelia-typescript-plugin.git"
  },
  "author": "Dwayne Charrington <dwaynecharrington@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/Vheissu/aurelia-typescript-plugin#readme",
  "bugs": {
    "url": "https://github.com/Vheissu/aurelia-typescript-plugin/issues"
  },
  "devDependencies": {
    "@types/chai": "^4.0.1",
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.9",
    "chai": "^4.0.2",
    "mocha": "^3.4.2",
    "rimraf": "^2.6.1",
    "rollup": "^0.43.0",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "ts-helpers": "^1.1.2",
    "ts-node": "^3.2.0",
    "tslib": "^1.7.1",
    "tslint": "^5.5.0",
    "typescript": "^2.4.1",
    "uglifyjs": "^2.4.11"
  }
}
