{
  "name": "aurelia-typescript-plugin",
  "version": "1.0.0",
  "description": "TypeScript based plugin structure for Aurelia plugins.",
  "keywords": [
    "skeleton",
    "plugin",
    "aurelia"
  ],
  "main": "index.bundle.js",
  "module": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "prebuild": "rimraf dist && cp package.json dist",
    "build": "tsc -p tsconfig-esm.json && gulp && rollup -c rollup.config.js",
    "postbuild": "ts-node tools/cleanup.ts && cp README.md dist",
    "lint": "tslint -c tslint.json src/**/*.ts test/**/*.ts",
    "test": "mocha --require ts-node/register test/**/*.spec.ts --recursive",
    "test:watch": "mocha -w --require ts-node/register test/**/*.spec.ts --recursive",
    "publish": "cd dist && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Vheissu/aurelia-typescript-plugin.git"
  },
  "author": "Dwayne Charrington <dwaynecharrington@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/Vheissu/aurelia-typescript-plugin#readme",
  "bugs": {
    "url": "https://github.com/Vheissu/aurelia-typescript-plugin/issues"
  },
  "devDependencies": {
    "@types/chai": "^4.0.1",
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.9",
    "chai": "^4.0.2",
    "gulp": "^3.9.1",
    "gulp-postcss": "^7.0.0",
    "mocha": "^3.4.2",
    "postcss-cssnext": "^3.0.0",
    "postcss-import": "^10.0.0",
    "postcss-modules": "^0.8.0",
    "rimraf": "^2.6.1",
    "rollup": "^0.43.0",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-postcss": "^0.5.3",
    "ts-helpers": "^1.1.2",
    "ts-node": "^3.2.0",
    "tslib": "^1.7.1",
    "tslint": "^5.5.0",
    "typescript": "^2.4.1",
    "uglify-js": "^3.0.24"
  },
  "dependencies": {
    "aurelia-framework": "^1.1.2"
  }
}
